{
    "extends": [
        "standard",
        "plugin:jasmine/recommended"
    ],
    "env": {
        "es6": true,
        "node": true,
        "jasmine": true
    },
    "plugins": [
        "jasmine"
    ],
    "globals": {
        "document": false,
        "window": false,
        "console": false
    },
    "rules": {
        "indent": [
            2,
            2
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}